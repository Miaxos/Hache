# include <stdio.h>
# include <string.h>

int len(const char *);
int max2(int, int);
int max4(int, int, int, int);
char* getNextDelimiter(const char *);

int main() {
	char test[] = "Salutje||suis &&eli||ot&\n";
	printf("len test : %i\n", len(test));
	printf("next delimiter : %s\n", getNextDelimiter(test));
	//printf("next delimitor : %s\n", getNextDelimitor(test));
	return 0;
}

int len(const char *string) {
	return (int)strlen(string);
}

char* getNextDelimiter(const char *input) {
	int compteur = 0;
	char c;
	while (((c=input[compteur])!='\n')) {
		if (c=='|') {
			if (input[compteur+1]=='|') return "||";
			return "|";
		} else if (c=='&') {
			if (input[compteur+1]=='&') return "&&";
			return "&";
		} else if (c=='|') {
			if (input[compteur+1]=='|') return "||";
			return "|";
		} else if (c=='<') {
			if (input[compteur+1]=='<') return "<<";
			return "<";
		} else if (c=='>') {
			if (input[compteur+1]=='>') return ">>";
			return ">";
		}
		compteur++;
	}
	return NULL;
}

int max2(int a, int b) {
	if (a>=b) return a; else return b;
}

int max4(int a, int b, int c, int d) {
	int e = max2(a, b);
	int f =  max2(e, c);
	return max2(f, d);
}
	
